---
interface Props {
  variant?: 'default' | 'inline';
}

const { variant = 'default' } = Astro.props;
---

{variant === 'default' ? (
  <div class="flex flex-col items-center gap-4">
    <a
      href="https://stillsmall.substack.com/subscribe"
      target="_blank"
      rel="noopener noreferrer"
      class="btn-primary"
    >
      Subscribe on Substack
    </a>
    <p class="text-sm text-muted">
      Free newsletter, delivered to your inbox.
    </p>
  </div>
) : (
  <a
    href="https://stillsmall.substack.com/subscribe"
    target="_blank"
    rel="noopener noreferrer"
    class="inline-flex items-center gap-2 font-sans text-sm tracking-widest uppercase text-charcoal hover:text-accent transition-colors duration-300"
  >
    Subscribe
    <svg
      class="w-4 h-4"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="1.5"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25" />
    </svg>
  </a>
)}
