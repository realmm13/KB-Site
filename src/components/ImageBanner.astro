---
interface Props {
  images: {
    src: string;
    alt: string;
  }[];
}

const { images } = Astro.props;
---

<section class="w-full overflow-hidden">
  <div class="flex gap-1 h-[280px] md:h-[360px] lg:h-[440px]">
    {images.map((image, index) => (
      <div
        class:list={[
          'relative flex-1 overflow-hidden',
          // Vary widths for visual interest - outer images narrower, center wider
          index === 0 ? 'flex-[0.7]' : '',
          index === 1 ? 'flex-[1]' : '',
          index === 2 ? 'flex-[1.3]' : '',
          index === 3 ? 'flex-[1]' : '',
          index === 4 ? 'flex-[0.7]' : '',
        ]}
      >
        <img
          src={image.src}
          alt={image.alt}
          class="w-full h-full object-cover object-center"
          loading="eager"
        />
      </div>
    ))}
  </div>
</section>
