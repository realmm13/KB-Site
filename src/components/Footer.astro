---
const currentYear = new Date().getFullYear();
---

<footer class="relative mt-auto">
  <!-- Top separator -->
  <div class="absolute top-0 left-0 right-0 h-px bg-border"></div>

  <div class="container py-12 lg:py-16">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
      <!-- Left side -->
      <div class="space-y-3">
        <p class="font-serif text-lg text-charcoal">
          Kendall Brown
        </p>
        <p class="font-sans text-sm text-muted">
          Writer & Podcaster
        </p>
      </div>

      <!-- Right side -->
      <div class="flex flex-col md:items-end gap-4">
        <a
          href="https://stillsmall.substack.com"
          target="_blank"
          rel="noopener noreferrer"
          class="group inline-flex items-center gap-2 font-sans text-sm tracking-widest uppercase text-muted hover:text-charcoal transition-colors duration-300"
        >
          <span>Subscribe on Substack</span>
          <svg
            class="w-4 h-4 transform transition-transform duration-300 group-hover:translate-x-0.5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="1.5"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25" />
          </svg>
        </a>

        <p class="font-sans text-xs text-muted/70">
          &copy; {currentYear} Kendall Brown. All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>
