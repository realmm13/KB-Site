---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostList from '../components/PostList.astro';
import SubscribeForm from '../components/SubscribeForm.astro';
import ImageBanner from '../components/ImageBanner.astro';
import { getLatestPosts } from '../lib/rss';

const posts = await getLatestPosts(6);

// Homepage banner images - add your images to public/images/banner/
const bannerImages = [
  { src: '/images/banner/1.jpg', alt: 'Lifestyle image' },
  { src: '/images/banner/2.jpg', alt: 'Lifestyle image' },
  { src: '/images/banner/3.jpg', alt: 'Lifestyle image' },
  { src: '/images/banner/4.jpg', alt: 'Lifestyle image' },
  { src: '/images/banner/5.jpg', alt: 'Lifestyle image' },
];
---

<BaseLayout
  title="Kendall Brown"
  description="Writer and podcaster exploring identity, purpose, and the courage to listen to your inner voice."
>
  <!-- Hero Section -->
  <section class="py-16 lg:py-24">
    <div class="container">
      <div class="max-w-3xl">
        <p class="font-sans text-sm tracking-widest uppercase text-muted mb-6">
          Writer & Podcaster
        </p>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif font-medium text-charcoal leading-[1.1]">
          Exploring how to listen to your inner
          <span class="italic">still, small</span> voice.
        </h1>
        <p class="mt-8 text-xl text-muted leading-relaxed max-w-2xl">
          I write about identity, purpose, and rejecting society's default rules.
          Join me as I navigate the messy, beautiful work of becoming yourself.
        </p>
        <div class="mt-10 flex flex-wrap gap-4">
          <a href="/writing" class="btn-primary">
            Read My Writing
          </a>
          <a href="/about" class="btn-secondary">
            Learn More
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Image Banner -->
  <ImageBanner images={bannerImages} />

  <!-- Recent Writing List -->
  {posts.length > 0 && (
    <section class="py-16 lg:py-24">
      <div class="container">
        <div class="max-w-3xl">
          <div class="flex items-center justify-between mb-10">
            <h2 class="text-2xl font-serif font-semibold text-charcoal">
              Recent Writing
            </h2>
            <a
              href="/writing"
              class="font-sans text-sm tracking-widest uppercase text-muted hover:text-charcoal transition-colors duration-300"
            >
              View All
            </a>
          </div>
          <PostList posts={posts} />
        </div>
      </div>
    </section>
  )}

  <!-- Subscribe CTA -->
  <section class="py-20 lg:py-28">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-3xl lg:text-4xl font-serif font-medium text-charcoal">
          Join the conversation
        </h2>
        <p class="mt-4 text-lg text-muted">
          Subscribe to receive new essays and podcast episodes in your inbox.
        </p>
        <div class="mt-8">
          <SubscribeForm />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
